<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
        <!-- Log to console (important pour Railway) -->
        <target xsi:type="Console" name="console" layout="${longdate} | ${level} | ${logger} | ${message}" />

        <!-- Log to file -->
        <target xsi:type="File" name="file" fileName="logs/logfile.log"
                layout="${longdate} | ${level} | ${logger} | ${message} | ${exception}" />

    </targets>
    <rules>
        <!-- Write all logs to the console -->
        <logger name="*" minlevel="Debug" writeTo="console" />
        <!-- Write warnings and errors to the file -->
        <logger name="*" minlevel="Warn" writeTo="file" />
    </rules>
</nlog>
